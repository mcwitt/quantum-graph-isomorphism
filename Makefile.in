source = @root@
bindir = @bindir@

VPATH = $(source)

CC = gcc
CFLAGS = -Wall -O3
#CFLAGS = -Wall -g

LDLIBS = -lm -lgsl -lgslcblas

COMM_OBJS = global.o graph.o hexbin.o nlcg.o params.o qaa.o
OBJS = cg.o cgs.o $(COMM_OBJS)
BINARIES = cg cgs
BINS = $(addprefix $(bindir)/, $(BINARIES))

all: $(BINS)

$(bindir)/cg: $(COMM_OBJS) cg.o
	$(CC) $^ -o $@ $(LDLIBS)

$(bindir)/cgs: $(COMM_OBJS) cgs.o
	$(CC) $^ -o $@ $(LDLIBS)

.PHONY: clean

clean:
	$(RM) $(OBJS)


